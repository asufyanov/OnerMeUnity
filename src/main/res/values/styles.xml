<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UnityThemeSelector" parent="android:Theme.Light.NoTitleBar.Fullscreen"></style>

    <style name="UnityThemeSelector.Translucent" parent="@style/UnityThemeSelector">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NewsViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">12dp</item>

        <item name="cardBackgroundColor">@color/icons</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ObjectCardViewStyle" parent="Theme.AppCompat.Light">

        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="recyclerViewStyle" parent="Theme.AppCompat.Light">


    </style>

    <!-- Palette generated by Material Palette - materialpalette.com/deep-orange/red -->
    <color name="primary">#FF5722</color>
    <color name="primary_dark">#E64A19</color>
    <color name="primary_light">#FFCCBC</color>
    <color name="accent">#FF5252</color>
    <color name="primary_text">#212121</color>
    <color name="secondary_text">#757575</color>
    <color name="icons">#FFFFFF</color>
    <color name="divider">#BDBDBD</color>

</resources>
